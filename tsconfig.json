{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "incremental": true,
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "noEmit": true,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "panda": ["./src/devtools/styled-system"],
    }
  },
  "exclude": ["node_modules", "example"],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
